a =int(input())
if(1<a<=20):
 for i in range(a):
  print(" ",end="")
 print("*")
 m=a
 while(a>1):
  for i in range(1,a+1):
   for j in range(a-1):
    print(" ",end="")
   for k in range(2*i+1):
    print("*",end="")
   print()
  a-=1
 for j in range(2):
  for i in range(m):
   print(" ",end="")
  print("*")
if(m<2):
 print("You cannot generate Christmas tree")
if(m>20):
  print("Tree is no more")
